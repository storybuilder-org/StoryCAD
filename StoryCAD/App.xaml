<Application x:Class="StoryCAD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Load WinUI resources -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Load Uno.UI.Toolkit resources -->
                <ToolkitResources xmlns="using:Uno.Toolkit.UI" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Add resources here -->

            <!-- Global TabView style for touch accessibility -->
            <!-- Sets minimum height of 44px for all TabViewItem headers across the application -->

            <Style TargetType="TabViewItem">
                <Setter Property="HeaderTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       FontSize="14"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"/>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="MinHeight" Value="44" />
                <Setter Property="MinWidth" Value="120"/> <!-- ensures consistent tab width -->
            </Style>
        </ResourceDictionary>
    </Application.Resources>

</Application>
