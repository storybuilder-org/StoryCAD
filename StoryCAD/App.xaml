<Application x:Class="StoryCAD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Load WinUI resources -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Load Uno.UI.Toolkit resources -->
                <ToolkitResources xmlns="using:Uno.Toolkit.UI" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Add resources here -->

            <!-- Global TabView style for touch accessibility (WCAG 2.1 Level AAA) -->
            <!-- Sets minimum height of 44px for all TabViewItem headers across the application -->
            <Style TargetType="TabViewItem">
                <Setter Property="MinHeight" Value="44" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>

</Application>
