<UserControl
    x:Class="StoryCAD.Controls.BrowseTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Orientation="Horizontal">
        <TextBox 
            x:Name="PathTextBox"
            IsReadOnly="True"
            Header="{x:Bind Header, Mode=OneWay}"
            PlaceholderText="{x:Bind PlaceholderText, Mode=OneWay}"
            Text="{x:Bind Path, Mode=TwoWay}"
            Width="{x:Bind TextBoxWidth, Mode=OneWay}"
            VerticalAlignment="Center"
            Margin="8"/>
        <Button 
            x:Name="BrowseButton"
            Content="{x:Bind ButtonText, Mode=OneWay}"
            Click="OnBrowseClick"
            VerticalAlignment="{x:Bind ButtonVerticalAlignment, Mode=OneWay}"
            Margin="{x:Bind ButtonMargin, Mode=OneWay}"/>
    </StackPanel>
</UserControl>