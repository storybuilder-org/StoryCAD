<Page
    x:Class="StoryCAD.Services.Dialogs.RecentFiles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Center" Height="480" Margin="0,0,70,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Recent files: " FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0"/>
        <ListBox Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Name="Recents" Width="300" SelectionChanged="{x:Bind UnifiedMenuVM.LoadRecentStory}"  SelectedIndex="{x:Bind UnifiedMenuVM.SelectedRecentIndex, Mode=TwoWay}"/>
        <Button Content="Open story from disk" Click="{x:Bind UnifiedMenuVM.LoadStory}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="2"/>
    </Grid>
</Page>