<Page
    x:Class="StoryCAD.Services.Dialogs.Tools.KeyQuestionsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <ComboBox Header="Story Element Type" Width="300" Margin="0,20"
                  ItemsSource="{x:Bind KeyQuestionsVm.KeyQuestionElements}"
                  SelectedItem="{x:Bind KeyQuestionsVm.StoryElementName, Mode=TwoWay}" />
        <TextBlock Width="500" Text="{x:Bind KeyQuestionsVm.Topic, Mode=TwoWay}" />
        <TextBlock Width="500" Height="300" TextWrapping="Wrap" Margin="0,20,0,0"
                   Text="{x:Bind KeyQuestionsVm.Question, Mode=TwoWay}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Previous Question" Click="Previous_Click" Margin="0,0,25,0" />
            <Button Content="Next Question" Click="Next_Click" Margin="25,0,0,0" />
        </StackPanel>
    </StackPanel>

</Page>
